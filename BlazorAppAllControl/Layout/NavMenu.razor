<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorAppAllControl</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="admin/dashborad" @onclick= "() => ToggleSubMenu(1)" >
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Admin
            </NavLink>
            @if (showSubMenu[1])
            {
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> User list
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/roles">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Role list
                    </NavLink>
                </div>
            </nav>
            }
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="user/dashboard" @onclick="() => ToggleSubMenu(2)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> User
            </NavLink>
            @if (showSubMenu[2])
            {
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user/applyjob">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Apply job
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user/jobstatus">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Status list
                    </NavLink>
                </div>
            </nav>
            }
        </div>

    </nav>
</div>

@code {
    bool[] showSubMenu = new bool[3];
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    void ToggleSubMenu(int index)
    {
        for (int i = 0; i < showSubMenu.Length; i++)
        {
            if(i == index)
            {
                showSubMenu[i] = !showSubMenu[i];
            }
            else
            {
                showSubMenu[i] = false;
            }

        }
    }
}
